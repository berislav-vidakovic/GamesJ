server {
    server_name gamesj-test.barryonweb.com;

     # Serve images directly
    location /images/ {
        alias /var/www/games/gamesj/images/; 
        access_log off;
        expires 30d;
        add_header Cache-Control "public";
    }

    # API proxy
    location /api/ {
        proxy_pass http://127.0.0.1:8084/api/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection keep-alive;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;   
        proxy_set_header X-Forwarded-Port $server_port; 
        proxy_set_header X-Forwarded-Host $host;       
        proxy_cache_bypass $http_upgrade;
    }

    # Health check endpoint
    location /ping {
      proxy_pass http://127.0.0.1:8084/api/ping;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
    }

    # WebSocket proxy
    location /websocket {
      proxy_pass http://127.0.0.1:8084/websocket;
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection "Upgrade";
      proxy_set_header Host $host;
      proxy_set_header X-Forwarded-Proto $scheme;   
      proxy_set_header X-Forwarded-Port $server_port; 
      proxy_set_header X-Forwarded-Host $host;       

    # Websocket timeout (default is 60s)
      proxy_read_timeout 3600;
      proxy_send_timeout 3600;
      proxy_connect_timeout 3600;
    }

    # GraphQL endpoint
    location /graphql {
      proxy_pass http://127.0.0.1:8084/graphql;
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection keep-alive;
      proxy_set_header Host $host;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header X-Forwarded-Port $server_port;
      proxy_set_header X-Forwarded-Host $host;
      proxy_cache_bypass $http_upgrade;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/gamesj-test.barryonweb.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/gamesj-test.barryonweb.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = gamesj-test.barryonweb.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name gamesj-test.barryonweb.com;
    listen 80;
    return 404; # managed by Certbot


}